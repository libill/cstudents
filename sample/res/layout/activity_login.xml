<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.mall.view.EditTextAutoView
        android:id="@+id/et_auto_view_account"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_hdpi_84"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px_hdpi_20"
        android:layout_marginRight="@dimen/px_hdpi_20"
        android:layout_marginTop="@dimen/px_hdpi_20"
        auto:drawableLeftdefault="@drawable/ic_action_copy"
        auto:drawableLeftfocus="@drawable/ic_action_copy"
        auto:hint="@string/input_account_hint"
        auto:inputType="number"
        auto:maxLength="11"
        auto:showBytes="false" />

    <com.example.mall.view.EditTextAutoView
        android:id="@+id/et_auto_view_password"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_hdpi_84"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px_hdpi_20"
        android:layout_marginRight="@dimen/px_hdpi_20"
        android:layout_marginTop="@dimen/px_hdpi_20"
        auto:drawableLeftdefault="@drawable/ic_action_copy"
        auto:drawableLeftfocus="@drawable/ic_action_copy"
        auto:hint="@string/input_password_hint"
        auto:inputType="textPassword"
        auto:maxLength="20"
        auto:showBytes="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_hdpi_100"
            android:layout_weight="1"
            android:text="@string/register" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_hdpi_100"
            android:layout_weight="1"
            android:text="@string/login" />
    </LinearLayout>
</LinearLayout>