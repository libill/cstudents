<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_hdpi_20"
        android:text="@string/input_phone" />

    <com.example.mall.view.EditTextAutoView
        android:id="@+id/et_auto_view_phone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_hdpi_84"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px_hdpi_20"
        android:layout_marginRight="@dimen/px_hdpi_20"
        android:layout_marginTop="@dimen/px_hdpi_20"
        auto:drawableLeftdefault="@drawable/ic_action_copy"
        auto:drawableLeftfocus="@drawable/ic_action_copy"
        auto:hint="@string/input_account_hint"
        auto:inputType="number"
        auto:maxLength="11"
        auto:showBytes="false" />

    <Button
        android:id="@+id/bt_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_hdpi_20"
        android:text="@string/next_step"/>

</LinearLayout>