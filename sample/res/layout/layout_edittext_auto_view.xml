<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_delete"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_hdpi_10"
            android:layout_marginRight="@dimen/px_hdpi_20"
            android:background="@drawable/ic_action_copy"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_hdpi_14"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_px_36"
            android:visibility="gone" />

        <EditText
            android:id="@+id/common_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/black_light"
            android:textColorHint="@color/gray_light"
            android:textSize="@dimen/font_size_px_36" />

        <TextView
            android:id="@+id/common_edittext_Tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_light"
            android:textSize="@dimen/font_size_px_36"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/px_hdpi_14"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/show_byte_number_llyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_input"
        android:layout_marginTop="@dimen/px_hdpi_60"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/over_byte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/px_hdpi_20" />

        <TextView
            android:id="@+id/totle_byte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/px_hdpi_20" />
    </LinearLayout>

</RelativeLayout>